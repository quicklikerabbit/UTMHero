<table id="links_table" class="responsive-table bordered striped">
  <thead>
      <tr>
          <th>Client</th>
          <th>Made By</th>
          <th>Created At</th>
          <th>Bitly URL</th>
          <th>Website URL</th>
          <th>Campaign Source</th>
          <th>Campaign Medium</th>
          <th>Campaign Term</th>
          <th>Campaign Content</th>
          <th>Campaign Name</th>
          <th>Notes</th>
          <th>UTM Link</th>
      </tr>
  </thead>
  <tbody id="links_table_body">
    <% (0..@links.length).each do |i| %>
      <% if @links[i] %>
        <tr>
          <td><%= @client_names[i] %></td>
          <td><%= @user_names[i] %></td>
          <td><%= @created_times[i] %></td>
          <td><%= @links[i].short_link %></td>
          <td><%= @links[i].website_url %></td>
          <td><%= @links[i].campaign_source %></td>
          <td><%= @links[i].campaign_medium %></td>
          <td><%= @links[i].communication_id %></td>
          <td><%= @links[i].utm_content %></td>
          <td><%= @links[i].campaign_name %></td>
          <td><%= @links[i].link_reference %></td>
          <td><%= @links[i].utm_link %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if @links %>
<ul class="pagination">
  <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
  <li class="active light-blue darken-4"><a href="#!">1</a></li>
  <li class="waves-effect"><a href="#!">2</a></li>
  <li class="waves-effect"><a href="#!">3</a></li>
  <li class="waves-effect"><a href="#!">4</a></li>
  <li class="waves-effect"><a href="#!">5</a></li>
  <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
</ul>
<% end %>
