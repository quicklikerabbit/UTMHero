<div class="col s12">
  <div class="row">
    <%= form_for @link, html: { multipart: true }, remote: true do |f| %>
      <div class="input-field col s6">
        <%= f.label :client_id %><br>
        <%= f.text_field :client_id %>
      </div>
      <div class="input-field col s6">
        <%= f.label :website_url, "Website URL*" %><br>
        <%= f.text_field :website_url, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :campaign_source, "Campaign Source*"%><br>
        <%= f.text_field :campaign_source, required: true %>
      </div>
      <div class="input-field col s6">
        <%= f.label :campaign_medium, "Campaign Medium*" %><br>
        <%= f.text_field :campaign_medium, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :communication_id, "Campaign Term" %><br>
        <%= f.text_field :communication_id %>
      </div>
      <div class="input-field col s6">
        <%= f.label :utm_content, "Campaign Content" %><br>
        <%= f.text_field :utm_content %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :campaign_name, "Campaign Name*" %><br>
        <%= f.text_field :campaign_name, required: true %>
      </div>
      <div class="input-field col s6">
        <%= f.label :link_reference, "Notes" %><br>
        <%= f.text_field :link_reference %>
      </div>
    </div>
    <div class="row">
      <div class="col s3" style="width: auto">
        <button class="btn waves-effect waves-light light-blue darken-4" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
      <% end %>
      <div id="created-link" class="col s8">
        <p style="height: 6px">
          Copy meeeeeee
        </p>
      </div>
      <div class="col s1">
        <button id="copy-button" onclick="Materialize.toast('Copied!', 1000)" class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Copy to clipboard" type="button" data-clipboard-target="#created-link">
            <i class="fa fa-files-o"></i>
        </button>
      </div>
    </div>
  </div>
  <br />
