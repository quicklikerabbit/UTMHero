<!-- Modal Trigger -->
<a class="modal-trigger waves-effect waves-light blue btn" href="#share_links_modal">Share Links</a>

<!-- Modal Structure -->
<div id="share_links_modal" class="modal bottom-sheet">
  <div class="modal-content">
    <h4>Who do you want to share them with?</h4>
    <%= form_for @add_user, url: {controller: 'user_adder', action: "create"}, html: {class: "pure-form", style: "width: 50%; margin-left: 25%"} do |f| %>
      <%= f.label :client %>
      <%= f.text_field :client %>
      <br />
      <%= f.label :user_email %>
      <%= f.text_field :user_email, required: true, type: 'email', style: "margin-bottom: 0.5em"  %>
      <%= f.submit "Submit", class: "button-xsmall pure-button" %>
    <% end %>
    <p>Note: they need to sign up before you can share links with them</p>
  </div>
</div>
