<div class="content">
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-2-5">
      <%= form_for @link, html: { multipart: true }, remote: true do |f| %>
        <% if @link.errors.any? %>
        <div>
          <%= pluralize(@link.errors.count, "error") %> prevented this link from being created:
          <ul>
            <% @link.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="pure-form pure-form-stacked">
          <%= f.label :client_id %><br>
          <%= f.text_field :client_id %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :website_url, "Website URL" %><br>
          <%= f.text_field :website_url, required: true %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :campaign_source, "Campaign Source"%><br>
          <%= f.text_field :campaign_source, required: true %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :campaign_medium, "Campaign Medium" %><br>
          <%= f.text_field :campaign_medium, required: true %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :communication_id, "Campaign Term" %><br>
          <%= f.text_field :communication_id %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :utm_content, "Campaign Content" %><br>
          <%= f.text_field :utm_content %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :campaign_name, "Campaign Name" %><br>
          <%= f.text_field :campaign_name, required: true %>
        </div>
      </div>
      <div class="pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.label :link_reference, "Notes" %><br>
          <%= f.text_field :link_reference %>
        </div>
      </div>
      <div class="l-box-lrg pure-u-1 pure-u-md-2-5">
        <div class="pure-form pure-form-stacked">
          <%= f.submit "Submit", id: "index-page-submit-button" %>
        </div>
      </div>
      <% end %>
    </div>
</div>
